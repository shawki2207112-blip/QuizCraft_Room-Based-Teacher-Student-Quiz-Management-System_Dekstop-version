<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.CreateQuestionController"
            fitToWidth="true">
    <content>
        <VBox spacing="12.0"
              style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Question"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TextArea fx:id="questionArea"
                      promptText="Enter question"
                      prefRowCount="3"
                      wrapText="true"/>

            <Label text="Image (optional)"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Button text="Choose Image"
                        onAction="#onChooseImageClicked"/>
                <Label fx:id="imagePathLabel"
                       text="No image selected"
                       style="-fx-text-fill: #555555;"/>
            </HBox>
            <ImageView fx:id="previewImageView"
                       fitWidth="200"
                       preserveRatio="true"
                       smooth="true"/>

            <Label text="Options"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <VBox fx:id="optionsBox"
                  spacing="8.0"/>

            <HBox spacing="8.0">
                <Button text="Add Option"
                        onAction="#onAddOptionClicked"/>
                <Button text="Remove Last"
                        onAction="#onRemoveOptionClicked"/>
            </HBox>

            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Correct option #:"/>
                <ComboBox fx:id="correctIndexCombo"
                          prefWidth="80"/>
            </HBox>

            <HBox spacing="8.0" alignment="CENTER_RIGHT">
                <Button text="Save"
                        prefWidth="120"
                        onAction="#onSaveClicked"/>
                <Button text="Cancel"
                        prefWidth="120"
                        onAction="#onCancelClicked"/>
            </HBox>

        </VBox>
    </content>
</ScrollPane>
