<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.CreateQuestionController">
    <content>
        <VBox spacing="12.0" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #d9b38c);">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Question" />
            <TextArea fx:id="questionArea" prefRowCount="3" promptText="Enter question" wrapText="true" />

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Image (optional)" />
            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Button onAction="#onChooseImageClicked" text="Choose Image" />
                <Label fx:id="imagePathLabel" style="-fx-text-fill: #555555;" text="No image selected" />
            </HBox>
            <ImageView fx:id="previewImageView" fitWidth="200" preserveRatio="true" smooth="true" />

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Options" />

            <VBox fx:id="optionsBox" spacing="8.0" />

            <HBox spacing="8.0">
                <Button onAction="#onAddOptionClicked" text="Add Option" />
                <Button onAction="#onRemoveOptionClicked" text="Remove Last" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="8.0">
                <Label text="Correct option #:" />
                <ComboBox fx:id="correctIndexCombo" prefWidth="80" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="8.0">
                <Button onAction="#onSaveClicked" prefWidth="120" text="Save" />
                <Button onAction="#onCancelClicked" prefWidth="120" text="Cancel" />
            </HBox>

        </VBox>
    </content>
</ScrollPane>
