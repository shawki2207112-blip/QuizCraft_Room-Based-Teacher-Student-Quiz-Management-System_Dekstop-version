<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #d9b38c);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.ResultListController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label fx:id="roomLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Room: " />
        </HBox>
    </top>

    <center>
        <TableView fx:id="resultTable" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e6d5c3);">
            <columns>
                <TableColumn fx:id="studentColumn" prefWidth="200" text="Student" />
                <TableColumn fx:id="scoreColumn" prefWidth="100" text="Score" />
                <TableColumn fx:id="totalColumn" prefWidth="100" text="Total" />
            </columns>
        </TableView>
    </center>

</BorderPane>
