<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.ResultListController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="roomLabel"
                   text="Room: "
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="resultTable">
            <columns>
                <TableColumn fx:id="studentColumn" text="Student" prefWidth="200"/>
                <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
                <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
