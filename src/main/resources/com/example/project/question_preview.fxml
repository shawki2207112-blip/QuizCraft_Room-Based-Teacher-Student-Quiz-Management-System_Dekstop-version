<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project.QuestionPreviewController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="questionLabel"
           wrapText="true"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <ImageView fx:id="imageView"
               fitWidth="250"
               preserveRatio="true"
               smooth="true"/>

    <ListView fx:id="optionsList"/>

    <Label fx:id="answerLabel"
           style="-fx-text-fill: #007700; -fx-font-weight: bold;"/>

    <Button text="Close"
            onAction="#onCloseClicked"
            maxWidth="Infinity"/>
</VBox>
