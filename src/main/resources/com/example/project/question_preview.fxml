<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="600" spacing="10" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #d9b38c);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.QuestionPreviewController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="questionLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" wrapText="true" />

    <ImageView fx:id="imageView" fitWidth="250" preserveRatio="true" smooth="true" />

    <ListView fx:id="optionsList" />

    <Label fx:id="answerLabel" style="-fx-text-fill: #007700; -fx-font-weight: bold;" />

    <Button maxWidth="Infinity" onAction="#onCloseClicked" text="Close" />
</VBox>
